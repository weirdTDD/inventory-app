generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id         String   @id @default(cuid())
  userId     String
  name       String
  sku        String?  @unique
  price      Decimal  @db.Decimal(12, 2)
  quantity   Int      @default(0)
  lowStockAt Int?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId, name])
  @@index([createdAt])
}
